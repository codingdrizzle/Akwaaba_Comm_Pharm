{
  "workbench.colorTheme": "Default Dark+",
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "window.zoomLevel": 0,
  "editor.cursorBlinking": "smooth",
  "editor.fontLigatures": true,
  "editor.fontFamily": "'Operator Mono', 'Fira Code'",
  "terminal.integrated.fontFamily": "'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.semanticHighlighting.enabled": true,
  "editor.colorDecorators": true,
  "editor.cursorSmoothCaretAnimation": true,
  "workbench.editor.decorations.colors": true,
  "editor.cursorStyle": "line-thin",
  "workbench.preferredDarkColorTheme": "Dark+ Operator Mono",
  "workbench.preferredLightColorTheme": "Dark+ Operator Mono",
}

